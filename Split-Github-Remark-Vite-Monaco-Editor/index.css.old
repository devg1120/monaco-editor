 body {
     margin: 0;
     background-color: white;
 }
 

#in {
     position: fixed;
     top: 40px;
     left: 0;
     bottom: 0;
     width: 50%;
     height: 300px;
     overflow: auto;
     font-size: 12px;
     box-shadow: 0px 0px 0px 1px rgba(0, 0, 0, 0.4);
 }

#out {
     position: fixed;
     top: 40px;
     right: 0;
     left: 50%;
     height: 300px;
     bottom: 0;
     overflow: auto;
     padding: 10px;
     padding-left: 20px;
     border-left: 2px solid #444;
 }

#in2 {
     position: fixed;
     top: 360px;
     left: 0;
     bottom: 0;
     width: 50%;
     height: 300px;
     overflow: auto;
     font-size: 12px;
     box-shadow: 0px 0px 0px 1px rgba(0, 0, 0, 0.4);
 }

